<div class="container text-center">
<h1 class="mb-5 mt-2"><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
<h2><%= bookmark.movie.title%></h2>
<p>- <%=  bookmark.comment %></p>
<% end %>

<div class="d-flex justify-content-end"><%= link_to "Add a bookmark (movie)", new_list_bookmark_path(@list), class: "btn btn-primary" %></div>
<p><%= link_to "Back to the list", lists_path, class: "btn btn-primary mt-3" %></p>
<p><%= link_to "Delete this category", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></p>
</div>
