<div class="container mt-5">

  <h1 class="d-flex justify-content-center"> <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.error_notification %>
    <%= f.association :movie, prompt: "Select a movie" %>
    <%= f.input :comment %>
    <%= f.button :submit, "Create a bookmark", class: "btn btn-primary mb-2"%>
  <% end %>

<%= link_to "Back", list_path(@list), class: "btn btn-info" %>

</div>
